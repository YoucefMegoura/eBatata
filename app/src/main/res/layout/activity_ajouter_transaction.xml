<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    tools:context="dz.youcefmegoura.ebatata.ebatata.views.AjouterTransactionActivity">


    <CalendarView
        android:id="@+id/calendar_ajouter_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/adonne_rl_ajouter_transaction"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/calendar_ajouter_transaction"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/combien_il_a_donne"
        android:gravity="right">

        <EditText
            android:id="@+id/a_donne_ajouter_transaction"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:hint="0 Box"
            android:inputType="numberSigned" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/apris_rl_ajouter_transaction"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/adonne_rl_ajouter_transaction"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/combien_il_a_pris"
        android:gravity="right">

        <EditText
            android:id="@+id/a_pris_ajouter_transaction"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:hint="0 Box"
            android:inputType="numberSigned" />

    </RelativeLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/apris_rl_ajouter_transaction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_button_blue"
        android:drawableLeft="@drawable/ic_move_to_inbox"
        android:gravity="center"
        android:onClick="effectuerButton"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:text="ajouter"
        android:textColor="@drawable/color_text_button_white" />


</RelativeLayout>
