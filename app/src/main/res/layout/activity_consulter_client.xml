<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    tools:context="dz.youcefmegoura.ebatata.ebatata.views.ConsulterClientActivity">

    <ImageView
        android:id="@+id/imageview_consulter_client"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:src="@drawable/background_consulter_client" />


    <LinearLayout
        android:id="@+id/linearLayout_consulter_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_consulter_client"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_consulter_client"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_marginTop="10dp"
            android:onClick="modifier_client_consulter_client"
            android:src="@drawable/client_icone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nom_consulter_client"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="nom"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/num1_consulter_client"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="num 1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/num2_consulter_client"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"

                android:text="num 2"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button_consulter_client"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_below="@+id/linearLayout_consulter_client"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_button_blue"
        android:drawableLeft="@drawable/ic_pages_black"
        android:gravity="center"
        android:onClick="showTransactions"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:textColor="@drawable/color_text_button_white"
        android:textSize="30sp" />


</RelativeLayout>
