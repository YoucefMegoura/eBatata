<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="dz.youcefmegoura.ebatata.ebatata.views.AjouterClientActivity">

    <ImageView
        android:id="@+id/imageview_ajouter_client"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:src="@drawable/background_consulter_client" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Ajouter client"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageview_ajouter_client"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nom_ajouter_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/num1_ajouter_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero de telephone 1"
            android:inputType="phone" />

        <EditText
            android:id="@+id/num2_ajouter_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero de telephone 2"
            android:inputType="phone" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_button_blue"
            android:drawableLeft="@drawable/ic_person_add"
            android:gravity="center"
            android:onClick="ajouterClient"
            android:paddingLeft="30dip"
            android:paddingRight="26dip"
            android:text="ajouter"
            android:textColor="@drawable/color_text_button_white" />

    </LinearLayout>

</RelativeLayout>
