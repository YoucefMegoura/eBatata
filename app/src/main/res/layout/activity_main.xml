<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="dz.youcefmegoura.ebatata.ebatata.views.MainActivity">


    <ImageView
        android:id="@+id/imageview_activity_main"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:src="@drawable/backgroung_welcome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview_activity_main"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="Welcome\nYacine Sahnoun"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageview_activity_main"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/ajouter_client_activity_main"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@id/imageview_activity_main"
            android:background="@drawable/ic_button_white"
            android:fontFamily="@font/montserrat_bold"
            android:onClick="ajouterClient"
            android:text="Ajouter un nouveau client"
            android:textColor="@drawable/color_text_button_blue" />

        <Button
            android:id="@+id/consulter_client_activity_main"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/ajouter_client_activity_main"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_button_blue"
            android:fontFamily="@font/montserrat_bold"
            android:onClick="consulterClient"
            android:text="Consulter un client"
            android:textColor="@drawable/color_text_button_white" />


    </LinearLayout>


</RelativeLayout>
